{% extends "index.html" %}
{% block navbar %}
{% if request.has_permission('edit') %}
<li><a href="/logout">Logout</a></li>
{% else %}
<li><a href="/login">Login</a></li>
{% endif %}
{% endblock %}
{% block content %}
<div class="container">
    <form action="" method="POST">
        <div class="row">
            <div class="col-sm-2">
            </div>
            <div class="col-sm-8">
                <section id="forms">
                    <div class="form-group">
                        <h2>Title...</h2>
                        <input name="title" class="form-control" value="{{ article.title }}" required></input>
                    </div>
                </section>
            </div>
            <div class="col-sm-2">
            </div>
        </div>
        <div class="row">
            <div class="col-sm-2">
            </div>
            <div class="col-sm-8">
                <section id="forms">
                    <div class="form-group">
                        <h2>Article...</h2>
                        <textarea name="text" class="form-control" placeholder="" rows="10" required>{{ article.text }}</textarea>
                    </section>
                </div>
                <div class="col-sm-2">
                </div>
            </div>
            <div class="row">
                <div class="col-sm-2">
                </div>
                <div class="col-sm-8">
                    <button type="submit" class="btn btn-default">Re-submit</button>
                </div>
                <div class="col-sm-2">
                </div>
            </div>
        </form>
    </div>
{% endblock %}
